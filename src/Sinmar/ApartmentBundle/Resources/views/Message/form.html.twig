{% extends "SinmarApartmentBundle::base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">
            <h2>Edit Community</h2>
            <form method="post" action="{{ path("message_handle") }}">
                <div class="form-group">
                    <label for="title" class="control-form">Message Title</label>
                    <input type="text" name="title" id="title" value="{{ message.title }}" class="form-control">
                </div>
                <div class="form-group">
                    <label for="message" class="control-form">Message</label>
                    <textarea class="summernote" name="message">{{ message.message }}</textarea>
                </div>
                <div class="form-group">
                    <input type="hidden" name="id" value="{{ message.id }}">
                    <input type="submit" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
{% endblock body %}

{% block js %}
    <script>
        $(document).ready(function() {
            $('.summernote').summernote();
        });
    </script>
{% endblock js %}